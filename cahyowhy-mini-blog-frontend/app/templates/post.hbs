<div class="work-section" id="work">
  <div class="container content-lg">
    <div class="row margin-b-40">
      <div class="col-sm-12 textCenter">
        <h2>Post From Latest Post</h2>
        <p>Lorem ipsum dolor sit amet consectetur adipiscing elit sed tempor incididunt ut laboret dolore magna aliqua
          enim minim veniam exercitation</p>
      </div>
    </div>
    <div id="post-container" class="row post">
      {{#each posts as |post|}}
        {{post-item
          idPost=post.id
          likes=post.likeposts
          category=post.category
          img =  post.img
          title = post.title
          description = post.description
        }}
      {{/each}}
    </div>
    <div class="btn-wrapper-post"><a onclick={{action "onLoadPost"}} class="btn-primary btn-medium btn">Load more</a>
    </div>
  </div>
</div>