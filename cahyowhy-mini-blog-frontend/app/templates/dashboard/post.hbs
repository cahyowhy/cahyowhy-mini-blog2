<div class="work-section width800" id="work">
  <div class="content-lg padding0px width800">
    <div id="post-container" class="post">
      <div class="button-fly-wrapper">
        {{#if isLogedIn}}
          <div class="btn-wrapper">
            {{#link-to 'dashboard.create-post' class="btn btn-lg btn-primary pull-right"}}
              <i class="ion-plus-round ion"></i>
            {{/link-to}}
          </div>
        {{/if}}
      </div>
      {{#each posts as |post|}}
        {{post-item
          idPost=post.id
          username=post.user.username
          createdAt=post.created_at
          likes=post.likeposts
          category=post.category
          img =  post.image
          title = post.title
          review = post.review
        }}
      {{/each}}
    </div>
    {{#if ifPostIsEmpty}}
      {{content-is-empty}}
    {{else}}
      <div class="btn-wrapper-post"><a onclick={{route-action "onLoadPost"}} class="btn-primary btn-medium btn">Load more</a>
      </div>
    {{/if}}
  </div>
</div>