<div id="work" class="create-post">
  <div class="container content-lg paddingbot0px width800">
    <div class="row">
      <div class="col-sm-12 sm-margin-b-50 margin-top30 dashboard-index">
        <div class="header-profile">
          <div class="pull-left">
            <i class="ion ion-android-camera">
              {{image-uploader isEditFirst=true  class="upload cust-input" name="file" type="file" accept="image/*" url=url action="onImageChange"}}
            </i>
            <img class="img-circle" src="{{user.imageurl}}">
          </div>
          <div class="media-body">
            <div class="inner">
              <h1>{{user.name}}</h1>
              <p>{{user.username}}</p>
            </div>
          </div>
        </div>
        <div class="navigation">
          <div class="col-sm-4 textCenter">
            {{#link-to 'dashboard.index' tagName='i' class="ion-ios-bookmarks-outline ion"}}
            {{/link-to}}
          </div>
          <div class="col-sm-4 textCenter">
            {{#link-to 'dashboard.images' tagName='i' class="ion-images ion"}}
            {{/link-to}}
          </div>
          <div class="col-sm-4 textCenter">
            {{#link-to 'dashboard.setting' tagName='i' class="ion-android-settings ion"}}
            {{/link-to}}
          </div>
        </div>
        <div class="content overflow-hiden">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
</div>

<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Crop Image</h4>
      </div>
      <div class="modal-body">
        <img id="img-cropper" src="" alt="">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" onclick={{action "onUploadPictureProfile"}}>Upload</button>
        <button type="button" class="btn btn-default" onclick={{action "onCloseModal"}}>Cancel</button>
      </div>
    </div>
  </div>
</div>
